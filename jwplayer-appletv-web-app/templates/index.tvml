<?xml version="1.0" encoding="UTF-8" ?>
<document
  data-view="SplashScreen"
  data-splash-delay="2"
  data-splash-next="${CONFIG.searchPlaylist && CONFIG.searchPlaylist.length > 0 ? 'templates/Menu.tvml' : 'templates/ListCollection.tvml'}">

  <divTemplate>
    <img src="${CONFIG.configURL}/${CONFIG.splashScreen}"
      width="1920" height="1080" />
  </divTemplate>
</document>
